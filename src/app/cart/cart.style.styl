// CART PRODUCTS

.cart-products-list
  margin-top: 10px
  display: flex
  flex-flow: column

.cart-products-list__product
  display: flex
  padding: 10px
  background: #eee
  border-radius: 5px
  align-items: center

.cart-products-list__product + .cart-products-list__product
  margin-top: 5px

.cart-products-list__product__right
  margin-left: auto
  display: flex
  align-items: center

.cart-products-list__product__avatar
  width: 10%
  padding-bottom: 10%
  overflow: hidden
  position: relative

.cart-products-list__product__avatar img
  position: absolute
  width: auto
  min-width: 100%
  min-height: 100%

.cart-products-list__product__title
  margin-left: 10px
  font-size: 25px
  color: #333

.cart-products-list__product__delete
  font-size: 25px
  color: #666
  cursor: pointer
  margin-left: 10px

.cart-products-list__product__price
  padding: 0 5px
  background: #ffcc00
  border-radius: 5px
  border: 2px solid #fff
  color: #333
  font-weight: bold
  font-size: 20px

.cart-products-list__product__quantity
  margin-left: 10px

.cart-products-list__product__quantity input
  width: 70px

// CART CHECKOUT

.cart-checkout
  margin-left: auto
  display: flex
  align-items: center

.cart-checkout__total-price
  margin-left: auto
  color: #666
  font-size: 25px

.cart-checkout__proceed
  margin-left: 5px
