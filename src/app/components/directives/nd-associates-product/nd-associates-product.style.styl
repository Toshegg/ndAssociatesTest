.nd-associates-product
  display: flex
  flex-flow: column
  padding: 10px
  align-items: center
  background: #eee
  border-radius: 5px
  height: 500px
  justify-content: space-between

.nd-associates-product__avatar
  width: 100%
  padding-bottom: 100%
  overflow: hidden
  position: relative

.nd-associates-product__avatar img
  position: absolute
  width: auto
  min-width: 100%
  min-height: 100%

.nd-associates-product__title
  color: #333
  font-size: 20px
  margin-top: 10px

.nd-associates-product__description
  text-align: center

.nd-associates-product__price
  background: #ffcc00
  color: #333
  padding: 5px 10px
  font-size: 20px
  border-radius: 10px
  margin-top: 5px

.nd-associates-product__add-to-cart
  margin-top: 10px
